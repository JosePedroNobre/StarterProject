<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/BottomNavigationWidget"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="bottom" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:backgroundTint="@color/colorDark"
                android:focusable="true"
                android:src="@drawable/ic_add"
                android:tint="@color/white"
                app:layout_anchor="@id/bar"/>

        <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bar"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:hideOnScroll="true"
                android:layout_height="58dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/blackColor">

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/vNavigationMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@color/white"
                    app:tabIndicatorColor="@color/whiteColor"
                    app:tabSelectedTextColor="@color/whiteColor">

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/vAccounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overview"/>

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/vProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistics"/>

            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>